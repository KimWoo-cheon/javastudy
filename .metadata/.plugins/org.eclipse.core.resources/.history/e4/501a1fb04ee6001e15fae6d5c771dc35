package Q;

import java.util.Scanner;

public class Q32 {
	
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		System.out.println("========채점하기=======");
		String a1 = sc.next();
		String a2 = sc.next();
		String a3 = sc.next();
		String a4 = sc.next();
		String a5 = sc.next();
		int s1,s2,s3,s4,s5;
		if (a1=="O") { 
			s1=1;			
		}
		else s1=0;
		if (a2=="O") { 
			s2=s1+1;			
		}
		else s2=0;
		if (a3=="O") { 
			s3=s2+1;			
		}
		else s3=0;
		if (a4=="O") { 
			s4=s3+1;			
		}
		else s4=0;
		if (a5=="O") { 
			s5=s4+1;			
		}
		else s5=0;
		
		System.out.print(s1+s2+s3+s4+s5);
	}

}
